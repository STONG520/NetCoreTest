@model Heavy.Web.ViewModels.UserCreateViewModel
@{
    ViewData["Title"] = "AddUser";
}
<form asp-action="AddUser" method="post" asp-controller="User"> 
    <div class="form-group">
        <label asp-for="userName"></label>
        <input type="text" class="form-control" id="exampleInputEmail1" asp-for="userName">
        <span asp-validation-for="userName"></span>
    </div>
    <div class="form-group">
        <label asp-for="userPassword"></label>
        <input type="password" class="form-control" id="exampleInputEmail1" placeholder="Password" asp-for="userPassword">
        <span asp-validation-for="userPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="userEmail"></label>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="email" asp-for="userEmail">
        <span asp-validation-for="userEmail"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

