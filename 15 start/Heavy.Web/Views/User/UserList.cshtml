@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>
@{
    ViewBag.Title = "用户列表";
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">用户名ID</th>
            <th scope="col">用户名</th>
            <th scope="col">邮箱</th>
            <th scope="col">操作</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.Count; i++)
        {
        <tr>
            <th scope="row">@i+1</th>
            <td>@Model[i].Id</td>
            <td>@Model[i].UserName</td>
            <td>@Model[i].Email</td>
            <td>
                <a class="btn btn-primary" asp-action="UpdateUser" asp-route-id="@Model[i].Id" role="button">编辑</a>
                <a class="btn btn-primary" asp-action="DeleteUser" asp-route-id="@Model[i].Id" onclick="return confirm('确定删除？')" role="button">删除</a>

            </td>
        </tr>
        }

           
        </tbody>
</table>
<a class="btn btn-primary" asp-action="AddUser" role="button">添加用户</a>

