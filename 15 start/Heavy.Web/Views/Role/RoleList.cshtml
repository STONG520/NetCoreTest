@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">角色ID</th>
            <th scope="col">角色名</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@i+1</th>
                <td>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="UpdateRole" asp-route-id="@Model[i].Id" role="button">编辑</a>
                    <a class="btn btn-primary" asp-action="DeleteRole" asp-route-id="@Model[i].Id" onclick="return confirm('确定删除？')" role="button">删除</a>

                </td>
            </tr>
        }


    </tbody>
</table>
<a class="btn btn-primary" asp-action="AddRole" role="button">添加用户</a>
